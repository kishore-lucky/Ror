

<%# <%= render @user %>
<%= render "users/userCard",:user=>@user %>
  <%begin%>
  <%if Task.where(user_no: @user.id)[0].id>0%>
<table class="table">
  <thead>
    <tr>
      <th>Task Name</th>
      <th>Due Date</th>
      <th>Status</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
<% Task.where(user_no: @user.id).each do |task|%>

<tr scope="row"><%= render "tasks/task", :task => task %>
</tr>
<% end %>
  </tbody>
</table>

<%end%>
<%rescue %>
<p><%="NO task assigned for this user"%></p>
  <%end%>

<div>
  <%# <%= link_to "Edit this user", edit_user_path(@user) %> 
  <%# <%= link_to "Back to users", users_path %>

  <%= button_to "Destroy this user", @user, method: :delete %>
</div>
